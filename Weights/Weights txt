    SolverAdd CellRef:="BU$6:$CN$6", Relation:=3, FormulaText:="-0.1"
    SolverAdd CellRef:="$CP$6", Relation:=2, FormulaText:="0.99999999"
    SolverOk SetCell:="$CV$6", MaxMinVal:=1, ValueOf:=0, ByChange:="$BU$6:$CN$6", _
        Engine:=1, EngineDesc:="GRG Nonlinear"
    SolverOk SetCell:="$CV$6", MaxMinVal:=1, ValueOf:=0, ByChange:="$BU$6:$CN$6", _
        Engine:=1, EngineDesc:="GRG Nonlinear"
    SolverSolve userfinish:=True
    solverfinish keepfinal:=1
